<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x20"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_tv_forum_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/y10"
                android:maxEms="6"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="买那个韩国的话估计看到回复大家看法还"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:scaleType="centerCrop"
                android:src="@drawable/dxslm" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.liji.circleimageview.CircleImageView
                    android:id="@+id/iv_touxiang_forum"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y60"
                    android:src="@drawable/mytouxiang" />

                <TextView
                    android:id="@+id/item_tv_forum_contact"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="中控室都护府达摩福娘"
                    android:textSize="14sp" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/x250"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_iv_forum_image"
                android:layout_width="@dimen/x250"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/y10"
        android:layout_width="match_parent"
        android:background="@color/color_cccccc"
        android:layout_height="1sp" />
</LinearLayout>