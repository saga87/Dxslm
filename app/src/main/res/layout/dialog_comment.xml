<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_face_huifu"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y90"
            android:layout_gravity="center"
            android:background="@drawable/ib_face_normal" />

        <EditText
            android:id="@+id/dialog_et_context"
            android:layout_width="0dp"
            android:layout_height="@dimen/y90"
            android:layout_margin="@dimen/y10"
            android:layout_weight="1"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/dialog_btn_confirm"
            android:layout_width="@dimen/y120"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginRight="@dimen/y10"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/button_color_selector"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_face_contain"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:visibility="gone">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_emoji"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/ll_point_contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="5dp">
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>