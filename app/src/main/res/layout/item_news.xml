<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x20"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_tv_news_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxEms="6"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="买那个韩国的话估计看到回复大家看法还"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:scaleType="centerCrop"
                android:src="@drawable/dxslm" />

            <TextView
                android:id="@+id/n_news_contact"
                android:layout_marginTop="@dimen/y15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="中控室都护府达摩福娘中控室都护府达摩福娘中控室都护府达摩福娘"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/item_tv_news_contact"
                android:layout_marginTop="@dimen/y20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"

                android:ellipsize="end"

                android:text="中控室都护府达摩福娘"
                android:textSize="12sp" />
        </LinearLayout>
       <LinearLayout
           android:layout_width="@dimen/x250"
           android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item_iv_news_image"
            android:layout_width="@dimen/x250"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
           />
       </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/y10"
        android:layout_width="match_parent"
        android:background="#F2F2F2"
        android:layout_height="10sp" />
</LinearLayout>