<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:background="@color/color_cccccc"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/y20"
                android:layout_marginRight="@dimen/y20"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.liji.circleimageview.CircleImageView
                    android:id="@+id/iv_my_touxiang_love_dainji"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y60"
                    android:src="@drawable/mytouxiang" />
                <TextView
                    android:id="@+id/tv_item_commentall_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="123"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_marginBottom="@dimen/y20"
                    android:layout_marginLeft="@dimen/y20"/>

                <TextView
                    android:id="@+id/tv_item_commentall_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_marginBottom="@dimen/y20"
                    android:text="我手机"/>



            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_commentall_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555"
                android:text="哈哈"
                android:layout_marginLeft="@dimen/x10"
                android:layout_margin="@dimen/y10"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/item_iv_biaobai_delete"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/y70"
                    android:src="@drawable/delete"
                    android:paddingTop="@dimen/y1"
                    android:paddingLeft="@dimen/y20"
                    android:paddingRight="@dimen/x20" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>