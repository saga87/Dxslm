<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="@color/title">
        <ImageView
            android:id="@+id/iv_post_details_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/headtext6"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_post_details_ddd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ddd"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/y20"
                android:layout_marginTop="@dimen/y20">

                <com.liji.circleimageview.CircleImageView
                    android:id="@+id/iv_touxiang_post_detail"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/y80"
                    android:src="@drawable/mytouxiang" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/y5"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/item_tv_post_detail_contact"
                        android:paddingTop="@dimen/y2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="中控室都护府达摩福娘"
                        android:textColor="#309AC0"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/item_tv_post_detail_school"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="中控室都护府达摩福娘"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_post_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="@dimen/y30"/>
            <TextView
                android:id="@+id/tv_post_details_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/y30"
                android:layout_marginRight="@dimen/y30"/>
            <com.dxslm.ui.ListViewForScrollView
                android:id="@+id/lv_post_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" >
            </com.dxslm.ui.ListViewForScrollView>

            <TextView
                android:layout_width="match_parent"
                android:background="#F2F2F2"
                android:layout_marginTop="@dimen/y5"
                android:layout_height="10dp" />

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/y20"
                    android:text="用户评论"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
            <com.dxslm.ui.ListViewForScrollView
                android:id="@+id/lv_post_details_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" >
            </com.dxslm.ui.ListViewForScrollView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:background="@color/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120">
        <ImageButton
            android:id="@+id/ib_face_post"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y90"
            android:layout_gravity="center"
            android:background="@drawable/ib_face_normal" />
        <ImageView
            android:id="@+id/img_tupian_picture_post"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:src="@drawable/xaingji1"/>
        <EditText
            android:id="@+id/et_post_details_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y80"
            android:layout_margin="@dimen/y20"
            android:layout_gravity="center"
            android:background="@drawable/edittext"
            android:paddingLeft="@dimen/y10"
            android:textSize="13sp"
            android:hint="请填写评论"
            android:textColorHint="@color/color_cccccc" />
        <Button
            android:id="@+id/btn_post_details_confirm"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginRight="@dimen/y20"
            android:layout_width="@dimen/y120"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/white"
            android:background="@drawable/button_color_selector"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_face_contain"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:visibility="gone">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_emoji"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/ll_point_contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="5dp">
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
