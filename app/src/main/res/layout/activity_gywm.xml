<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="@color/title">
        <ImageView
            android:id="@+id/iv_gywm_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="关于我们"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_news_ddd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"/>
    </LinearLayout>
    <ImageView
        android:background="@drawable/gywmimg"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <TextView
        android:id="@+id/tv_gywm_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="@dimen/x30"/>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/color_cccccc"
        android:layout_height="1sp" />
    <TextView
        android:id="@+id/tv_gywm_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="@dimen/x30"/>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/color_cccccc"
        android:layout_height="1sp" />
    <TextView
        android:id="@+id/tv_gywm_wx"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="@dimen/x30"/>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/color_cccccc"
        android:layout_height="1sp" />
    <TextView
        android:id="@+id/tv_gywm_qq"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="@dimen/x30"/>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/color_cccccc"
        android:layout_height="1sp" />
    <TextView
        android:id="@+id/tv_gywm_gzh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="@dimen/x30"/>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/color_cccccc"
        android:layout_height="1sp" />
</LinearLayout>
