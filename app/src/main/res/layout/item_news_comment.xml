<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/line1_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:background="@color/color_cccccc"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/y20"
                android:layout_marginRight="@dimen/y20"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.liji.circleimageview.CircleImageView
                    android:id="@+id/iv_my_touxiang_stu_dainji"
                    android:layout_width="@dimen/y100"
                    android:layout_height="@dimen/y100"
                    android:src="@drawable/mytouxiang"  />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/y5"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_item_comment_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="123"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/y5"/>
                        <TextView
                            android:id="@+id/tv_item_comment_title_huifu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/y5"
                            android:layout_gravity="center"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_item_comment_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:textSize="13sp"
                        android:layout_margin="@dimen/y5"/>


                </LinearLayout>
                <ImageView
                    android:id="@+id/item_iv_news_delete"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/y70"
                    android:src="@drawable/delete"
                    android:paddingTop="@dimen/y1"
                    android:layout_marginRight="@dimen/x10"
                    android:paddingLeft="@dimen/y20"
                    android:paddingRight="@dimen/x20"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            </LinearLayout>


            <LinearLayout
                android:id="@+id/line_item_news_zongti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_item_comment_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="123"
                    android:layout_marginLeft="@dimen/y20"
                    android:layout_marginRight="@dimen/y20"
                    android:layout_marginBottom="@dimen/y20"/>

                    <ImageView
                        android:id="@+id/pinglun_img"
                        android:layout_width="160dp"
                        android:scaleType="fitXY"
                        android:layout_height="160dp"
                        android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>